
<div class="d-flex justify-content-center">
  <section class="card my-5 shadow card-background">
    <div class="card-body">
     
        
<h1 class="card-subtitle mb-3 center "><%= @post.new_record? ? 'New Post' : 'Edit Post' %></h1>
<%= form_with(model: @post, local: true) do |form| %>
<div class=" mb-3 ">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class=" mb-3 ">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>
  <div class=" mb-3 ">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class=" mb-3 ">
    <%= form.label :status %>
    <%= form.select :status, [['Draft', 'draft'], ['Published', 'published']] %>
  </div>
  <div class=" mb-3 ">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div class=" mb-3 ">
    <%= form.label :video %>
    <%= form.file_field :video %>
  </div>
  <%= form.submit @post.new_record? ? 'Create Post' : 'Update Post' %>
<% end %>
    </div>
    </section>
    </div>
